{
    "config_class": "DQNRepAgentConfig",
    "fixed_parameters": {
        "exp_name": "example/gridhard/representations/dqn_test/best.json",
        "env_name": "GridHardRGB",
        "linear_probing_parent": "DQNAgent",
        "discount": 0.99,
        "state_norm_coef": 255.0,

        "epsilon": 0.1,

        "rep_config": {
            "rep_type": "online",
            "network_type": "conv",
            "conv_architecture": {
                "conv_layers": [
                   {"in": 3,  "out": 16, "kernel": 4, "stride": 2, "pad": 2},
                   {"in": 16,  "out": 16, "kernel": 4, "stride": 2, "pad": 2},
                   {"in": 16,  "out": 8, "kernel": 4, "stride": 2, "pad": 2}
                ]
            },
            "in_dim": [15, 15, 3],
            "out_dim": 32,
            "load_params": false,
            "train_rep": true
        },

        "val_fn_config": {
            "val_fn_type": "linear",
	        "init_type": "xavier"
        },

        "replay": true,
        "memory_size": 10000,
        "batch_size": 32,

        "optimizer_type": "Adam",
        "use_target_network": true,
        "target_network_update_freq": 64,

        "max_steps": 300000,
        "log_interval": 1000,
        "eval_interval": 5000,
        "eval_episodes": 5,
        "save_interval": 0,
        "timeout": 100,
        "stats_queue_size": 100,

        "distance_path": {"current": "example/gridhard/random_dqn/distance_current_states.npy", "action": "example/gridhard/random_dqn/distance_actions.npy", "next": "example/gridhard/random_dqn/distance_next_states.npy", "reward": "example/gridhard/random_dqn/distance_rewards.npy", "terminal": "example/gridhard/random_dqn/distance_terminals.npy"},
        "linearprob_path": {"train": "example/gridhard/random_dqn/lip_sampled_states.npy", "test": "example/gridhard/random_dqn/retaining_test_states.npy"},
        "linearprob_tasks": [
            {"task": "xy", "loss":  "mse", "truth_start":  0, "truth_end":  2}
        ],
        "coord_dim": 2,
        "retain": "current",
        "linear_max_steps": 50000000,
        
        "visualize": true,
        "save_params": true,
        "evaluate_lipschitz": true,
        "evaluate_distance": true,
        "evaluate_orthogonality": true,
        "evaluate_noninterference": true,
        "evaluate_decorrelation": true,
        "evaluate_sparsity": true,
        "evaluate_regression": false
    },
    "sweep_parameters": {
        "learning_rate": [0.0001]
    }
}
