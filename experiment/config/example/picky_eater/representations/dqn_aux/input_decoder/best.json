{
    "config_class": "DQNAuxAgentConfig",
    "fixed_parameters": {
        "exp_name": "example/picky_eater/representations/dqn_aux/input_decoder/best",
        "env_name": "CollectTwoColorRGB",
        "agent": "DQNAuxAgent",
        "discount": 0.99,
        "state_norm_coef": 255.0,

        "epsilon": 0.1,

        "rep_config": {
            "rep_type": "online",
            "network_type": "conv",
            "conv_architecture": {
                "conv_layers": [
                   {"in": 3,  "out": 32, "kernel": 4, "stride": 1, "pad": 1},
                   {"in": 32,  "out": 32, "kernel": 4, "stride": 2, "pad": 2},
                   {"in": 32,  "out": 16, "kernel": 4, "stride": 2, "pad": 2}
                ]
            },
            "in_dim": [15, 15, 3],
            "out_dim": 32,
            "load_params": false,
            "train_rep": true
        },

        "val_fn_config": {
            "val_fn_type": "linear",
	        "init_type": "xavier"
        },

        "aux_config": [
            {"aux_fn_type":  "deconv", "aux_in_dim": 32, "aux_out_dim": [15, 15, 3], "aux_task": "input_decoder",
            "deconv_architecture": {
                "fc_layers": {
                    "hidden_units": [400]
                },
                "deconv_layers": [
                   {"in": 16,  "out": 32, "kernel": 4, "stride": 2, "pad": 2, "out_pad":0},
                   {"in": 32,  "out": 32, "kernel": 4, "stride": 2, "pad": 2, "out_pad":0},
                   {"in": 32,  "out": 3, "kernel": 4, "stride": 1, "pad": 1, "out_pad":0}
                ]
            }
            }
        ],

        "replay": true,
        "memory_size": 100000,
        "batch_size": 32,

        "optimizer_type": "Adam",
        "use_target_network": true,
        "target_network_update_freq": 1024,

        "max_steps": 1000000,
        "log_interval": 10000,
        "eval_interval": 50000,
        "eval_episodes": 5,
        "save_interval": 0,
        "timeout": 500,
        "stats_queue_size": 100,

        "tensorboard_logs": false,
        "save_params": true,
        "visualize": false
    },
    "sweep_parameters": {
        "learning_rate": [0.00003]
    }
}
