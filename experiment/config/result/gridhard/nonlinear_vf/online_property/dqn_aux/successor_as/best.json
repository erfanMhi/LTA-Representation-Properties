{
    "config_class": "DQNAuxAgentConfig",
    "fixed_parameters": {
        "exp_name": "result/gridhard/nonlinear_vf/online_property/dqn_aux/successor_as/best",
        "env_name": "GridHardRGB",
        "agent": "DQNAuxSuccessorAgent",
        "discount": 0.99,
        "state_norm_coef": 255.0,

        "decay_epsilon": true,
        "epsilon_start": 1.0,
        "epsilon_end": 0.1,
        "epsilon_schedule_steps": 100000,

        "rep_config": {
            "rep_type": "online",
            "network_type": "conv",
            "conv_architecture": {
                "conv_layers": [
                   {"in": 3,  "out": 32, "kernel": 4, "stride": 1, "pad": 1},
                   {"in": 32,  "out": 16, "kernel": 4, "stride": 2, "pad": 2}
                ]
            },
            "in_dim": [15, 15, 3],
            "out_dim": 64,
            "load_params": false,
            "train_rep": true
        },

        "val_fn_config": {
            "val_fn_type": "fc",
            "hidden_units": [128, 128],
            "init_type": "xavier"
        },

        "aux_config": [
            {
            "aux_fn_type":  "linear",
            "aux_in_dim": 64,
            "aux_out_dim": 64,
            "aux_task": "successor_as",
            "successor_lmbda":  0.99,
            "aux_weight": 1
            },
            {
            "aux_fn_type":  "linear",
            "aux_in_dim": 64,
            "aux_out_dim": 1,
            "aux_task": "reward_predictor",
            "aux_weight": 1
            }
        ],

        "replay": true,
        "memory_size": 100000,
        "batch_size": 32,

        "optimizer_type": "Adam",
        "use_target_network": true,
        "target_network_update_freq": 1024,

        "max_steps": 300000,
        "log_interval": 10000,
        "eval_interval": 10000,
        "eval_episodes": 5,
        "save_interval": 0,
        "timeout": 100,
        "stats_queue_size": 100,

        "save_early": {"mean": 1.0, "min": 1.0},

        "online_property": true,
        "tensorboard_logs": false,
        "save_params": true,
        "visualize": false,
        "evaluate_lipschitz": true,
        "evaluate_distance": true,
        "evaluate_orthogonality": true,
        "evaluate_interference": true,
        "evaluate_diversity": true,
        "evaluate_sparsity": true,
        "distance_paths": [{"current": "../dataset/gridhard/random_dqn/distance_current_states.npy", "action": "../dataset/gridhard/random_dqn/distance_actions.npy", "next": "../dataset/gridhard/random_dqn/distance_next_states.npy", "reward": "../dataset/gridhard/random_dqn/distance_rewards.npy", "terminal": "../dataset/gridhard/random_dqn/distance_terminals.npy"}]
    },
    "sweep_parameters": {
        "learning_rate": [0.0001]
    }
}
